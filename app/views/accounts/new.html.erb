<h1>Create Account</h1>

<strong> WARNING: This is a fun app built in my free time, DO NOT use any password that you use for anything important </strong>

<%= form_with model: @account do |form|%>
  <div>
    <%= form.label :username %>
    <%= form.text_field :username %>
    <% @account.errors.full_messages_for(:username).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
  <%= form.label :password  %>
  <%= form.password_field  :password  %>
  <% @account.errors.full_messages_for(:password).each do |message| %>
    <div><%= message %></div>
  <% end %>
  </div>

  <div>
  <%= form.label :password_confirmation %>
  <%= form.password_field  :password_confirmation %>
  <% @account.errors.full_messages_for(:password_confirmation).each do |message| %>
    <div><%= message %></div>
  <% end %>
  </div>

  <%= form.submit 'Create Account' %>
<% end %>