<h1> Create Riddle </h1>
<%= form_with(model: @riddle) do |form| %>
<div>
    <%= form.label :title %>
    <%= form.text_field :title %>
</div>
<div>
    <%= form.label :description %>
    <div>
        <%= form.text_area :description %>
    </div>
</div>
<div>
    <%= form.label :visibility%>
    <%= form.select :visibility, Riddle::VALID_VISIBILITY, selected: 'public' %>
</div>
<div>
    <%= form.submit "Create Riddle" %>
    </div>
<% end %>