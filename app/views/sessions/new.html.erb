<h1>Login</h1>

<%= form_with(scope: :session, url: login_path) do |form| %>
  <div>
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>

  <div>
    <%= form.label :password  %>
    <%= form.password_field  :password  %>
  </div>

  <div class="actions">
    <%= form.submit "Log in" %>
  </div>
<% end %>
