<h1>Login</h1>

<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>

<%= form_with(scope: :session, url: login_path) do |form|%>
  <div>
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>

  <div>
  <%= form.label :password  %>
  <%= form.password_field  :password  %>
  </div>

  <%= form.submit 'Login' %>
<% end %>
